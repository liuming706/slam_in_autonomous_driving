{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "build",
                "&&",
                "cd",
                "build",
                "&&",
                "cmake",
                "..",
                "-DCMAKE_EXPORT_COMPILE_COMMANDS=Yes",
                "&&",
                "make",
                "-j1"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
}